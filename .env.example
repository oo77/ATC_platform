# =============================================================================
# ATC Nuxt Application - Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и заполните значения
# Для Netlify: добавьте эти переменные в Dashboard -> Site settings -> Environment variables
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE - База данных MySQL
# -----------------------------------------------------------------------------
# Для локальной разработки используйте localhost
# Для Netlify используйте внешний сервис (PlanetScale, Railway, Aiven)

DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=atc_production

# Для PlanetScale используйте SSL:
# DATABASE_HOST=aws.connect.psdb.cloud
# DATABASE_SSL=true

# -----------------------------------------------------------------------------
# JWT - Аутентификация
# -----------------------------------------------------------------------------
# ВАЖНО: Используйте случайные строки минимум 64 символа!
# Генерация: openssl rand -base64 64

JWT_SECRET=change-this-to-a-very-long-random-secret-key-at-least-64-characters
JWT_EXPIRES_IN=7d

REFRESH_TOKEN_SECRET=change-this-to-another-very-long-random-secret-key-at-least-64-characters
REFRESH_TOKEN_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# TELEGRAM BOT
# -----------------------------------------------------------------------------
# Получите токен у @BotFather в Telegram

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Webhook URL для production (Netlify URL):
# TELEGRAM_WEBHOOK_URL=https://your-site.netlify.app/api/telegram/webhook

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------

NODE_ENV=production

# Включить автоматические миграции при старте (для Netlify)
AUTO_MIGRATE=true

# -----------------------------------------------------------------------------
# OPTIONAL - Дополнительные настройки
# -----------------------------------------------------------------------------

# Порт (для локального запуска, Netlify игнорирует)
# PORT=3000

# Логирование
# LOG_LEVEL=info

# -----------------------------------------------------------------------------
# OPENAI API - для AI-импорта сертификатов
# -----------------------------------------------------------------------------
# Вариант 1: OpenRouter (рекомендуется - дешевле и больше моделей)
# Получить ключ: https://openrouter.ai/keys
# Пополнить баланс: https://openrouter.ai/credits

# Вариант 2: OpenAI (оригинальный API)
# Получить ключ: https://platform.openai.com/api-keys
# Пополнить баланс: https://platform.openai.com/account/billing
# Рекомендуется установить лимит расходов: $20/месяц

OPENAI_API_KEY=sk-or-v1-your-openrouter-key-here

# Использовать OpenRouter вместо OpenAI (true/false)
USE_OPENROUTER=true

# Модели AI
# Для OpenRouter используйте формат: provider/model
# Примеры OpenRouter моделей:
#   - openai/gpt-4o (GPT-4 Omni - лучшее качество)
#   - openai/gpt-3.5-turbo (быстрее и дешевле)
#   - anthropic/claude-3-opus (альтернатива от Anthropic)
#   - google/gemini-pro-1.5 (альтернатива от Google)
# Для OpenAI используйте: gpt-4o, gpt-3.5-turbo
OPENAI_VISION_MODEL=openai/gpt-4o
OPENAI_TEXT_MODEL=openai/gpt-3.5-turbo

# Параметры обработки
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.1

# -----------------------------------------------------------------------------
# AI-ИМПОРТ - Хранилище файлов
# -----------------------------------------------------------------------------
AI_IMPORT_UPLOAD_DIR=./storage/ai-import-temp
AI_IMPORT_MAX_FILE_SIZE=10485760

